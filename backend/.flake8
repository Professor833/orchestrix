[flake8]
max-line-length = 150
extend-ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501
exclude =
    .git,
    __pycache__,
    migrations,
    venv,
    env,
    .env,
    .venv,
    node_modules,
    .tox,
    build,
    dist,
    *.egg-info
per-file-ignores =
    # F401: imported but unused
    __init__.py:F401
    # F403: star import
    settings.py:F403,F401
max-complexity = 10
import-order-style = google
docstring-convention = google